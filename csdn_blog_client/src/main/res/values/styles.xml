<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="MaterialNavigationDrawerTheme.Light.DarkActionBar.TranslucentKitKatStatusBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@android:color/black</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:actionBarStyle">@style/ActionBatStyle</item>
    </style>
    <!--  dialog -->
    <style name="Theme.Sphinx" parent="@android:style/Theme.Holo">
        <item name="android:actionBarStyle">@style/Widget.Sphinx.ActionBar.Solid</item>
        <item name="android:alertDialogTheme">@style/Theme_Sphinx_Dialog_Alert</item>
    </style>

    <style name="Widget.Sphinx.ActionBar.Solid" parent="@android:style/Widget.Holo.ActionBar.Solid">
        <item name="android:background">#FFA500</item>
    </style>
    <!-- Local copy of android:Theme.Holo.Dialog.Alert -->
    <style name="Theme_Holo_Dialog_Alert" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowTitleStyle">@style/DialogWindowTitle_Holo</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
    </style>

    <style name="Theme_Sphinx_Dialog_Alert" parent="@style/Theme_Holo_Dialog_Alert">


        <item name="android:background">@color/material_design_color_grey_700</item>
        <item name="android:textColorSecondary">@android:color/holo_orange_light</item>
        <item name="android:textColorPrimary">@android:color/holo_orange_light</item>
        <item name="android:textAppearanceMedium">@style/TextAppearance.Sphinx.Medium</item>
        <item name="android:windowTitleStyle">@style/DialogWindowTitle.Sphinx</item>
    </style>

    <style name="TextAppearance.Sphinx.Medium" parent="@android:style/TextAppearance.Holo.Medium">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DialogWindowTitle.Sphinx" parent="@style/DialogWindowTitle_Holo">
        <item name="android:textAppearance">@style/TextAppearance.Sphinx.DialogWindowTitle</item>
    </style>

    <style name="TextAppearance.Sphinx.DialogWindowTitle" parent="@android:style/TextAppearance.Holo.DialogWindowTitle">
        <item name="android:textColor">@android:color/holo_green_light</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- Local copy of android:DialogWindowTitle.Holo -->
    <style name="DialogWindowTitle_Holo">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Holo.DialogWindowTitle
        </item>
    </style>

    <style name="Theme_Dialog_Alert" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@android:color/holo_orange_light</item>
        <item name="android:textAppearanceMedium">@style/TextAppearance_Dialog_Medium</item>
    </style>

    <style name="TextAppearance_Dialog_Medium" parent="@android:style/TextAppearance.Holo.Medium">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.TranslucentStatusBar" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="dialogTheme">@style/Theme.AppCompat.Dialog</item>
        <item name="alertDialogTheme">@style/Theme.AppCompat.Dialog.Alert.Material</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:actionMenuTextAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="actionMenuTextColor">#111</item>
    </style>

    <style name="ActionBatStyle" parent="Base.Widget.AppCompat.Light.ActionBar">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Theme.AppCompat.Dialog.Alert.Material">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">#ff585758</item>
        <item name="android:textColorPrimary">#ff585758</item>
        <item name="android:textColorSecondary">#ff585758</item>
        <item name="alertDialogCenterButtons">true</item>
    </style>

    <style name="MenuLabelsStyle">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="AnimationActivity" mce_bogus="1" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_holder</item>
        <item name="android:activityCloseEnterAnimation">@anim/anim_holder</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="GPlusProgressBar" parent="SmoothProgressBar">
        <item name="spb_stroke_separator_length">12dp</item>
        <item name="spb_sections_count">4</item>
        <item name="spb_speed">0.7</item>
        <item name="spb_interpolator">spb_interpolator_linear</item>
        <item name="spb_colors">@array/gplus_colors</item>
        <item name="spb_mirror_mode">true</item>
        <item name="spb_reversed">true</item>
    </style>

    <style name="StyleRadioButton">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:background">@color/radio_button_background_color</item>
    </style>

    <style name="Toolbar" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#ff5cdfe4</item>
    </style>
</resources>
