<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="xyz.mijack.csdn.blog"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="xyz.mijack.csdn.blog.CSDNBlogApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name="xyz.mijack.csdn.blog.ui.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="xyz.mijack.csdn.blog.ui.SettingActivity"
            android:label="@string/title_activity_setting"
            android:parentActivityName="xyz.mijack.csdn.blog.ui.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="xyz.mijack.csdn.blog.ui.MainActivity" />
        </activity>
        <activity
            android:name="xyz.mijack.csdn.blog.ui.AboutActivity"
            android:label="@string/title_activity_about"
            android:launchMode="singleTask" />
        <activity
            android:name="xyz.mijack.csdn.blog.ui.BlogActivity"
            android:uiOptions="splitActionBarWhenNarrow" >
        </activity>
        <activity
            android:name="android.support.v7.widget.TestActivity"
            android:label="RecyclerViewTestActivity" />
    </application>

</manifest>