<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/radioGroup"
    android:layout_width="wrap_content"
    android:layout_height="?actionBarSize"
    android:layout_gravity="right"
    android:padding="9dp"
    android:checkedButton="@+id/hotButton"
    android:orientation="horizontal">

    <RadioButton
        android:id="@+id/hotButton"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/background_radio_button"
        android:button="@null"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="最热" />

    <RadioButton
        android:id="@+id/newButton"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/background_radio_button"
        android:button="@null"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:padding="12dp"
        android:text="最新" />
</RadioGroup><!-- From: file:/F:/Android_Studio_Project/CSDN-Blog-Client/csdn_blog_client/src/main/res/layout/layout_radio_group.xml -->